<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="336.0" prefWidth="532.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tsb.TSB.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <VBox prefHeight="100.0" prefWidth="363.0">
            <children>
               <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label text="Seleccione las opciones:" />
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label text="Genero:">
                        <padding>
                           <Insets right="15.0" />
                        </padding>
                     </Label>
                     <ChoiceBox fx:id="choiceGenero" prefWidth="150.0" />
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label text="Mostrar:">
                        <padding>
                           <Insets right="15.0" />
                        </padding>
                     </Label>
                     <ChoiceBox fx:id="choiceMostrar" prefWidth="150.0" />
                  </children>
               </HBox>
            </children>
         </VBox>
         <VBox alignment="CENTER" prefHeight="100.0" prefWidth="167.0">
            <children>
                <Button fx:id="btnBuscar" alignment="CENTER" onAction="#onBuscarButtonClick" text="Buscar" />
            </children>
            <padding>
               <Insets right="80.0" />
            </padding>
         </VBox>
      </children>
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <TableView prefHeight="100.0" prefWidth="516.0">
           <columns>
             <TableColumn prefWidth="75.0" text="C1" />
             <TableColumn prefWidth="75.0" text="C2" />
           </columns>
         </TableView>
      </children>
   </HBox>

    <Label fx:id="welcomeText" />
</VBox>
